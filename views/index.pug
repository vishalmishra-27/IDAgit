doctype html
html
    head
        <link rel="icon" href="../static/titlelogo.png" type="image/icon type">
        title India Dance Academy
        style
            include ../static/style.css
    body 
        div.wrapper 
            nav#navbar 
                ul 
                    div#logo 
                        div#insidelogo #[a(href='/') #[img(src="../static/icon2.png" alt="")]IDA]
                    li#listitem #[a(href='/') Home] 
                    li #[a(href='/AboutUs') About Us ]
                    li #[a(href='/OurServices') Our Services] 
            section#introsection  
                div India Dance Academy
                div Eat. &nbsp Sleep. &nbsp Dance. &nbsp Repeat. 
            section#contactus
                div.container
                    h3 Contact Us
                    form(action="/" method="post" class="myform")
                        input(type="text" name="name" class="myinput" placeholder="Enter your name") 
                        input(type="email" name="email" class="myinput" placeholder="Enter your e-mail") 
                        input(type="phone" name="phone" class="myinput" placeholder="Enter your phone no")  
                        input(type="text" name="desc" class="myinput" placeholder="Tell us about your concern") 
                        button(class ="btn" onclick="alert('Your query was submitted successfully')") SUBMIT